    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch EE Addon Debug on Chrome",
            "type": "chrome",
            "request": "attach",
            "runtimeExecutable" : "'C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe' --remote-debugging-port=9222"
            "port" : 9222,
            "url": "http://206.189.183.61/admin.php?/cp/addons/settings/manymailerplus",
            "webRoot": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
        },{
            "name": "Launch in Wamp Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://206.189.233.76/admin.php?/cp/addons",
            "webRoot": "${workspaceFolder}",
            "windows": {
                "diagnosticLogging": true,
                "userDataDir": true,
                // "runtimeExecutable" : "'C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe' --remote-debugging-port=9222"
            },
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "args": [
                "--timeout",
                "999999",
                // "--inspect-brk",
                "--colors",
                // "${file}"
                "${workspaceFolder}/tests/**/*.js"
            ],
            "outFiles": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${file}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All with Options",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--opts", 
                "${workspaceFolder}/support/mocha.opts",
                "${workspaceFolder}/test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}